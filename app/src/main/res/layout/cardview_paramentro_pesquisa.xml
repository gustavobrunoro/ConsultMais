<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:backgroundTint="@color/secondaryLightColor" >

    <TextView
        android:id="@+id/tv_descricaoPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <TableLayout
        android:id="@+id/tl_TabelaID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cod"
            android:background="@color/Table_Header_Background"
            android:textColor="@color/Table_Header_TextColor"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Descrição"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:background="@color/Table_Header_Background"
            android:textColor="@color/Table_Header_TextColor"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Qntd"
            android:background="@color/Table_Header_Background"
            android:textColor="@color/Table_Header_TextColor"/>

        <TextView
            android:id="@+id/tv_Opcao_0_Header"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="M"
            android:background="@color/Table_Header_Background"
            android:textColor="@color/Table_Header_TextColor"/>

        <TextView
            android:id="@+id/tv_Opcao_1_Header"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="F"
            android:background="@color/Table_Header_Background"
            android:textColor="@color/Table_Header_TextColor"/>

        </TableRow>

    </TableLayout>

    </ScrollView>

</LinearLayout>
